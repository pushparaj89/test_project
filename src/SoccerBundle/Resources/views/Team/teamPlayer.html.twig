{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Team</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ entity.name }}</td>
            </tr>
            <tr>
                <th>Logo_uri</th>
                <td>{{ entity.logouri }}</td>
            </tr>
        </tbody>
    </table>
<h1>Players</h1>

  <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Image_uri</th>
            </tr>
        </thead>
        <tbody>
        {% for player in players %}
            <tr>
                <td><a href="{{ path('soccer_player_show', { 'id': entity.id }) }}">{{ player .id }}</a></td>
                <td>{{ player .firstname }}</td>
                <td>{{ player .lastname }}</td>
                <td><img src="{{ asset(player .imageuri) }}" alt="player"/></td>
                <td>
                
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>



        <ul class="record_actions">
    <li>
        <a href="{{ path('soccer_team') }}">
            Back to the list
        </a>
    </li>
    <li>
</ul>
{% endblock %}
