{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Player list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>First_name</th>
                <th>Last_name</th>
                <th>Image_uri</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('soccer_player_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.firstname }}</td>
                <td>{{ entity.lastname }}</td>
                <td><img src="{{ asset('uploads/'~entity.imageuri) }}" height="150px" alt="img" /></td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('soccer_player_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('soccer_player_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('soccer_player_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
